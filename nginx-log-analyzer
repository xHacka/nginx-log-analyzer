# nano /etc/nginx/sites-available/nginx-log-analyzer
# ln -s /etc/nginx/sites-available/nginx-log-analyzer /etc/nginx/sites-enabled/nginx-log-analyzer
# certbot --nginx -d log.rgifo.lol
# systemctl restart nginx
server {
    server_name log.rgifo.lol;

    location / {
        proxy_pass http://localhost:12001;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        proxy_request_buffering off;
    }
}
